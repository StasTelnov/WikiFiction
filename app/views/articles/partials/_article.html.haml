%tr{:id => "#{article.id}"}
  %td= article.title
  %td= article.author
  %td= article.category.name
  %td= number_with_precision(article.rating, :precision => 2)
  %td= article.comments_count
  %td= article.ip
  %td= time_ago_in_words(article.updated_at)
  %td
    = link_to('Show', article_path(article), :class => 'btn btn-xs btn-info')
    = link_to('Edit', edit_article_path(article), :class => 'btn btn-xs btn-warning')